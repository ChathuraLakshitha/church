<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zeonit.nclc.actvity.MainActivity"
    android:background="@drawable/church_goth"
    android:id="@+id/mainLayout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="68dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NCLC CURCH"
            android:layout_gravity="center"
            android:textColor="@color/labelTextColor"
            android:textSize="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/chucrchAttendanceBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/noticeBtn"
                    android:layout_alignEnd="@id/noticeBtn"
                    android:layout_marginRight="117dp"
                    app:srcCompat="@drawable/noticeboard"
                    android:layout_alignRight="@id/noticeBtn" />

                <ImageView
                    android:id="@+id/memberSearchBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/noticeBtn"
                    android:layout_alignStart="@id/noticeBtn"
                    android:layout_marginLeft="117dp"
                    app:srcCompat="@drawable/search_user"
                    android:layout_alignLeft="@id/noticeBtn" />

                <ImageView
                    android:id="@+id/noticeBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_above="@+id/textView13"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/calendar_planner" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="17dp"
                    android:textAlignment="center"
                    android:text="Notice Attendance"
                    android:textColor="@color/labelTextColor" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chucrchAttendanceBtn"
                    android:text="Church Attendance"
                    android:layout_alignEnd="@+id/chucrchAttendanceBtn"
                    android:layout_alignStart="@id/chucrchAttendanceBtn"
                    android:textAlignment="center"
                    android:textColor="@color/labelTextColor"
                    android:layout_alignRight="@+id/chucrchAttendanceBtn"
                    android:layout_alignLeft="@id/chucrchAttendanceBtn" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/labelTextColor"
                    android:layout_below="@id/memberSearchBtn"
                    android:layout_alignStart="@id/memberSearchBtn"
                    android:layout_alignEnd="@id/memberSearchBtn"
                    android:text="Members"
                    android:textAlignment="center"
                    android:layout_alignLeft="@id/memberSearchBtn"
                    android:layout_alignRight="@id/memberSearchBtn" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/eventBtn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_marginTop="17dp"
                        app:srcCompat="@drawable/events_icon" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/eventBtn"
                        android:layout_alignLeft="@id/eventBtn"
                        android:layout_alignRight="@+id/eventBtn"
                        android:layout_alignStart="@id/eventBtn"
                        android:layout_below="@+id/eventBtn"
                        android:text="Event"
                        android:textAlignment="center"
                        android:textColor="@color/labelTextColor" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/noticeAttendanceBtn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="17dp"
                        app:srcCompat="@drawable/notice_req" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/noticeAttendanceBtn"
                        android:layout_alignLeft="@+id/noticeAttendanceBtn"
                        android:layout_alignRight="@+id/noticeAttendanceBtn"
                        android:layout_alignStart="@+id/noticeAttendanceBtn"
                        android:layout_below="@+id/noticeAttendanceBtn"
                        android:text="Notices"
                        android:textAlignment="center"
                        android:textColor="@color/labelTextColor" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
