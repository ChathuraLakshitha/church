<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/logoinView"
    android:clickable="true"
    android:focusableInTouchMode="true"

    >

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="226dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/apsswordText"
        android:layout_alignStart="@+id/apsswordText"
        android:layout_marginBottom="93dp"
        android:background="@color/loginBtnColor"
        android:text="Loging"
        android:textAlignment="center"
        android:paddingBottom="0dp"
        android:paddingTop="5dp"
        android:textColor="@color/labelTextColor"
        android:textSize="15dp"
        android:layout_alignRight="@+id/apsswordText"
        android:layout_alignLeft="@+id/apsswordText" />

    <EditText
        android:id="@+id/apsswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="224dp"
        android:ems="10"
        android:hint="phone number"
        android:inputType="phone" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:textColor="@color/labelTextColor"
        android:textSize="40dp"
        android:text="NCLC CURCH" />


</RelativeLayout>